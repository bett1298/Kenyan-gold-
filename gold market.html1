  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/12.3.0/firebase-app.js";
    import { getDatabase, ref, onValue, update, push } from "https://www.gstatic.com/firebasejs/12.3.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDUYnN3bOTPNHvKHdWwrlACOAnLCAgxiJI",
      authDomain: "manuu-59b30.firebaseapp.com",
      databaseURL: "https://manuu-59b30-default-rtdb.firebaseio.com/",
      projectId: "manuu-59b30",
      storageBucket: "manuu-59b30.firebasestorage.app",
      messagingSenderId: "872309397811",
      appId: "1:872309397811:web:ebe13952c02b7394954646",
      measurementId: "G-Z33JK3J3FM"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);
    const experiencesRef = ref(db, "experiences");

    let currentExperienceId = null;
    let currentYoutubeUrl = null;

    // Render experiences on page load
    function renderExperiences() {
      onValue(experiencesRef, (snapshot) => {
        const experiencesList = document.getElementById("experiencesList");
        experiencesList.innerHTML = "";

        if (!snapshot.exists()) {
          // If no experiences in database, show sample experiences
          displaySampleExperiences();
          return;
        }

        snapshot.forEach((experienceSnap) => {
          const experience = experienceSnap.val();
          const experienceId = experienceSnap.key;
          createExperienceCard(experience, experienceId);
        });
      });
    }

    // Create an experience card
    function createExperienceCard(experience, experienceId) {
      const experienceCard = document.createElement("div");
      experienceCard.classList.add("experience-card");
      
      experienceCard.innerHTML = `
        <div class="experience-thumbnail">
          <img src="${experience.imageUrl}" alt="${experience.title}">
          <div class="play-icon">
            <i class="fas fa-play"></i>
          </div>
          <div class="experience-duration">${experience.duration || '5:30'}</div>
        </div>
        <div class="experience-content">
          <h3 class="experience-title">${experience.title}</h3>
          <p class="experience-description">${experience.description}</p>
          
          <div class="farmer-info">
            <div class="farmer-avatar">${experience.farmerName ? experience.farmerName.charAt(0) : 'F'}</div>
            <div class="farmer-details">
              <div class="farmer-name">${experience.farmerName || 'Farmer'}</div>
              <div class="farmer-location">${experience.location || 'Kenya'}</div>
            </div>
          </div>
          
          <div class="experience-meta">
            <span><i class="far fa-calendar"></i> ${experience.date || 'May 15, 2023'}</span>
            <span><i class="far fa-eye"></i> ${experience.views || '1.2K'} views</span>
          </div>
          <div class="experience-actions">
            <button class="action-btn like-btn" data-experience-id="${experienceId}">
              <i class="far fa-thumbs-up"></i> <span>${experience.likes || 0}</span>
            </button>
            <button class="action-btn comment-btn" data-experience-id="${experienceId}">
              <i class="far fa-comment"></i> <span>${experience.comments ? Object.keys(experience.comments).length : 0}</span>
            </button>
            <button class="watch-full-btn" data-youtube-url="${experience.youtubeUrl || 'https://www.youtube.com/@candle-o1p'}">
              <i class="fas fa-play-circle"></i> Watch Full
            </button>
          </div>
        </div>
      `;
      
      document.getElementById("experiencesList").appendChild(experienceCard);
      
      // Add event listeners
      experienceCard.querySelector('.experience-thumbnail').addEventListener('click', () => openVideoModal(experience, experienceId));
      experienceCard.querySelector('.like-btn').addEventListener('click', (e) => likeExperience(e, experienceId, experience.likes || 0));
      experienceCard.querySelector('.comment-btn').addEventListener('click', () => openVideoModal(experience, experienceId, true));
      experienceCard.querySelector('.watch-full-btn').addEventListener('click', (e) => {
        const youtubeUrl = e.currentTarget.getAttribute('data-youtube-url');
        watchFullExperience(youtubeUrl);
      });
    }

    // Open video modal
    function openVideoModal(experience, experienceId, focusComment = false) {
      currentExperienceId = experienceId;
      const modal = document.getElementById('videoModal');
      const modalVideo = document.getElementById('modalVideo');
      const modalTitle = document.getElementById('modalTitle');
      
      modalTitle.textContent = experience.title;
      modalVideo.src = experience.videoUrl;
      modal.style.display = 'flex';
      
      if (focusComment) {
        setTimeout(() => {
          document.getElementById('commentInput').focus();
        }, 300);
      }
      
      // Load comments for this experience
      loadComments(experienceId);
    }

    // Close video modal
    document.getElementById('closeModal').addEventListener('click', () => {
      document.getElementById('videoModal').style.display = 'none';
      document.getElementById('modalVideo').pause();
    });

    // Like an experience
    function likeExperience(e, experienceId, currentLikes) {
      const likeBtn = e.currentTarget;
      const likeCount = likeBtn.querySelector('span');
      
      update(ref(db, "experiences/" + experienceId), {
        likes: currentLikes + 1
      }).then(() => {
        likeBtn.classList.add('liked');
        likeBtn.querySelector('i').className = 'fas fa-thumbs-up';
        likeCount.textContent = currentLikes + 1;
      });
    }

    // Watch full experience (with subscribe popup)
    function watchFullExperience(youtubeUrl) {
      currentYoutubeUrl = youtubeUrl;
      document.getElementById('subscribePopup').style.display = 'flex';
    }

    // Confirm subscription
    document.getElementById('confirmSubscribe').addEventListener('click', () => {
      document.getElementById('subscribePopup').style.display = 'none';
      if (currentYoutubeUrl) {
        window.open(currentYoutubeUrl, '_blank');
      }
    });

    // Add a comment
    document.getElementById('postComment').addEventListener('click', () => {
      const commentInput = document.getElementById('commentInput');
      if (commentInput.value.trim() === "" || !currentExperienceId) return;

      push(ref(db, "experiences/" + currentExperienceId + "/comments"), {
        text: commentInput.value,
        author: "You",
        timestamp: new Date().toISOString(),
        replies: []
      });

      commentInput.value = "";
    });

    // Load comments for an experience
    function loadComments(experienceId) {
      const commentsRef = ref(db, "experiences/" + experienceId + "/comments");
      onValue(commentsRef, (snapshot) => {
        const commentsList = document.getElementById("commentsList");
        commentsList.innerHTML = "";
        
        if (!snapshot.exists()) {
          commentsList.innerHTML = '<p style="text-align: center; color: #666;">No comments yet. Be the first to comment!</p>';
          return;
        }
        
        snapshot.forEach((commentSnap) => {
          const comment = commentSnap.val();
          const commentId = commentSnap.key;
          
          const commentEl = document.createElement("div");
          commentEl.classList.add("comment");
          
          // Format timestamp
          const date = new Date(comment.timestamp);
          const formattedDate = date.toLocaleDateString() + ' at ' + date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
          
          commentEl.innerHTML = `
            <div class="comment-header">
              <span class="comment-author">${comment.author || "Anonymous"}</span>
              <span class="comment-time">${formattedDate}</span>
            </div>
            <div class="comment-text">${comment.text}</div>
            <div class="comment-actions">
              <button class="comment-action like-comment">
                <i class="far fa-thumbs-up"></i> Like
              </button>
              <button class="comment-action reply-btn" data-comment-id="${commentId}">
                <i class="far fa-comment"></i> Reply
              </button>
            </div>
            <div class="reply-section" id="replies-${commentId}"></div>
          `;
          
          commentsList.appendChild(commentEl);
          
          // Add event listener for reply button
          commentEl.querySelector('.reply-btn').addEventListener('click', (e) => {
            const replySection = document.getElementById(`replies-${commentId}`);
            if (replySection.querySelector('.reply-input')) return;
            
            const replyInput = document.createElement("div");
            replyInput.classList.add("reply-input");
            replyInput.innerHTML = `
              <input type="text" placeholder="Write a reply...">
              <button class="post-reply">Post</button>
            `;
            
            replySection.appendChild(replyInput);
            
            // Add event listener for posting reply
            replyInput.querySelector('.post-reply').addEventListener('click', () => {
              const replyText = replyInput.querySelector('input').value;
              if (replyText.trim() === "") return;
              
              push(ref(db, `experiences/${experienceId}/comments/${commentId}/replies`), {
                text: replyText,
                author: "You",
                timestamp: new Date().toISOString()
              });
              
              replyInput.remove();
            });
          });
          
          // Load replies if they exist
          if (comment.replies) {
            Object.values(comment.replies).forEach(reply => {
              const replyEl = document.createElement("div");
              replyEl.classList.add("reply");
              
              const replyDate = new Date(reply.timestamp);
              const formattedReplyDate = replyDate.toLocaleDateString() + ' at ' + replyDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
              
              replyEl.innerHTML = `
                <div class="comment-header">
                  <span class="comment-author">${reply.author || "Anonymous"}</span>
                  <span class="comment-time">${formattedReplyDate}</span>
                </div>
                <div class="comment-text">${reply.text}</div>
              `;
              
              document.getElementById(`replies-${commentId}`).appendChild(replyEl);
            });
          }
        });
      });
    }

